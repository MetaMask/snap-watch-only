  "compilerOptions": {
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@metamask/*": ["../../../*/src"]
    },
    "types": ["node", "jest", "mocha", "chai"]
